<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-sm-12 col-md-6 col-lg-4">
        <div class=" card mb-4 box-shadow" style="width: 18rem;">
              <%= image_tag cocktail.image_url, width: 100, height: "auto", class: "card-img-top " %>
          <div class="card-body">
            <h3 class="card-text text-center"><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



